<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href="{{url}}">
                <img src="{{imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{url}}">
                    {{title}}
                </a>
            </div>
            <div class="details">
                <p>{{description}}</p>
                <div class="info">
                    submitted {{creationInfo}} ago by {{author}}
                </div>
                <div class="controls">
                    <ul>
                        {{#if isMadeByLoggedInUser}}
                            <li class="action"><a class="editLink" href="#/edit/{{id}}">edit</a></li>
                            <li class="action"><a class="deleteLink" href="#/delete/{{id}}">delete</a></li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form id="commentForm" action="#/comment/create/{{id}}" method="post">
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#if comments}}
        {{#each comments}}
            {{> comment}}
        {{/each}}
    {{else}}
        <p>No comments yet.</p>
    {{/if}}
</section>